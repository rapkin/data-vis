@require normalize

.main
    color #fff
    background #6ACD8D

.wrapper
    display flex
    height 100%
    width 100%
    align-content center
    justify-content center
    align-items center
    flex-wrap wrap

body > .wrapper
    height 100vh

.row
    display flex
    height 100%
    width 100%

#map
    // width 60%
    width 100%
    height 100%

.side
    height 100%
    width 40%

.title
    font-size 30px
    font-weight 100
    text-transform uppercase
    text-align center
    width 100%

h1.title
    font-size 34px

.main
    .title
        text-shadow 0 -1px 4px alpha(#000, .3)
        font-weight 900
        margin 10px 0
        font-size 50px

    .sub-title
        text-shadow 0 -1px 2px alpha(#000, .2)
        color alpha(#000, .4)
        margin 0

.sub-title
    font-size 26px
    font-weight 100
